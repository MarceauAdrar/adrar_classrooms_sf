{% extends 'base.html.twig' %}

{% block title %}
  Inscription
{% endblock %}

{% block css %}
  <link rel="stylesheet" href="{{ asset('css/register.css') }}" />
{% endblock %}

{% block body %}
  <div class="app">
    <div class="gauche">
      <p class="commentaire">« J'ai décidé de suivre une formation en développement web pour approfondir mes connaissances. J'ai travaillé dur pendant plusieurs semaines, apprenant les bases du HTML, CSS et JavaScript, et j'ai finalement réussi à créer plusieurs sites web. »</p>
      <p class="auteur">Marie - Freelance</p>
      <img class="image" src="{{ asset('assets/images/femme_heureuse.png') }}" alt="Femme heureuse" />
    </div>
    
    <div class="droit">
        <p class="wii titre">ADRAR Classrooms</p>
        <p class="bienvenue">Bienvenue</p>
        
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.prenom, {
                label: 'Prenom', 
            }) }}
            {{ form_row(registrationForm.nom, {
                label: 'Nom', 
            }) }}
            {{ form_row(registrationForm.email, {
                label: 'E-mail', 
            }) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe', 
            }) }}
            {{ form_row(registrationForm.plainPasswordBis, {
                label: 'Confirmer le mot de passe', 
            }) }}
            {{ form_row(registrationForm.image, {
                label: 'Votre photo de profil', 
            }) }}

            <button type="submit" class="register-btn">S'enregistrer</button>
        {{ form_end(registrationForm) }}
    </div>
  </div>
{% endblock %}
